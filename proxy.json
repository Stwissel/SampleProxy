{
    "port": 8091,
    "useSSL": true,
    "useProxy": false,
    "proxyHost": "localhost",
    "proxyPort": 8081,
    "targetHost": "filterdemo.dragontamer.net.00d7f000005vfmouag.live.siteforce.com",
    "targetPort": 443,
    "filters": [
    {
        "mimeType": "text/html",
        "path": "*",
        "regex": false,
        "class": "net.wissel.vertx.proxy.filters.HtmlFilter",
        "subfilters": [
        {
            "class": "net.wissel.vertx.proxy.filters.html.DropLinks",
            "parameters": {
                "fullremove" : false
            }
        },
        {
            "class": "net.wissel.vertx.proxy.filters.html.DropElements",
            "parameters":
            {
                "name": "script"
            }
        },
        {
            "class": "net.wissel.vertx.proxy.filters.html.DropElements",
            "parameters":
            {
                "name": "img"
            }
        }]
    },
    {
        "mimeType": "text/plain",
        "path": "*",
        "regex": false,
        "class": "net.wissel.vertx.proxy.filters.TextFilter",
        "subfilters": []
    },
    {
        "mimeType": "application/json",
        "path": ".*listViewManagerGrid\.ListViewManagerGrid\.getRecordLayoutComponent.*",
        "regex": true,
        "class": "net.wissel.vertx.proxy.filters.JsonFilter",
        "subfilters": [
        {
            "class": "net.wissel.vertx.proxy.filters.json.ElementHandler",
            "parameters":
            {
                "action" : "mask",
                "maskPattern" : "****",
                "unmaskedCount": 2,
                "elementName": ["Email/value","Name/value"]
            }
        },
        {
            "class": "net.wissel.vertx.proxy.filters.json.SimpleElementHandler",
            "parameters":
            {
                "action" : "clear",
                "path": ["/status","/grade"]
            }
        },
        {
            "class": "net.wissel.vertx.proxy.filters.json.SimpleElementHandler",
            "parameters":
            {
                "action" : "remove",
                "path": ["/remarks"]
            }
        }
       ]
    }],
    "deactivatedFilters": []
}