{
    "port": 8091,
    "useSSL": false,
    "useProxy": false,
    "proxyHost": "localhost",
    "proxyPort": 8081,
    "targetHost": "www.spiegel.de",
    "targetPort": 80,
    "filters": [
    {
        "mimeType": "text/html",
        "path": "/",
        "regex": false,
        "class": "net.wissel.vertx.proxy.filters.HtmlFilter",
        "subfilters": [
        {
            "class": "net.wissel.vertx.proxy.filters.html.DropElements",
            "parameters": {
                "name" : "hr"
            }
        },
        {
            "class": "net.wissel.vertx.proxy.filters.html.DropElements",
            "parameters":
            {
                "name": "script"
            }
        },
        {
            "class": "net.wissel.vertx.proxy.filters.html.DropElements",
            "parameters":
            {
                "name": "img"
            }
        }]
    },
    {
        "mimeType": "text/plain",
        "path": "*",
        "regex": false,
        "class": "net.wissel.vertx.proxy.filters.TextFilter",
        "subfilters": []
    },
    {
        "mimeType": "application/json",
        "path": "*",
        "regex": false,
        "class": "net.wissel.vertx.proxy.filters.JsonFilter",
        "subfilters": [
        {
            "class": "net.wissel.vertx.proxy.filters.json.SimpleElementHandler",
            "parameters":
            {
                "action" : "mask",
                "maskPattern" : "****",
                "unmaskedCount": 2,
                "elementName": ["eMail/value","fullName/value"]
            }
        },
        {
            "class": "net.wissel.vertx.proxy.filters.json.SimpleElementHandler",
            "parameters":
            {
                "action" : "clear",
                "path": ["/status","/grade"]
            }
        },
        {
            "class": "net.wissel.vertx.proxy.filters.json.SimpleElementHandler",
            "parameters":
            {
                "action" : "remove",
                "path": ["/remarks"]
            }
        }
       ]
    }],
    "deactivatedFilters": []
}